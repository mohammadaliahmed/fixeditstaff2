<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.MainActivity"

    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/nav"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:src="@drawable/ic_menu_lines" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="5dp"
            android:text="Ali Ahmed"
            android:textColor="#000"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30sp"
            android:layout_marginRight="70dp"
            android:background="#000" />


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/homelogo" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button_blue_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:text="Welcome to FIXEDIT"
            android:textColor="#fff" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="View your data by clicking any of the\nbelow option"
        android:textSize="11sp" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp">

        <RelativeLayout
            android:id="@+id/login"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/hex__lightgrey">

            <TextView
                android:id="@+id/currentAssignments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="30dp"
                android:text="Current Assignment"
                android:textColor="#000" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/signUp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/login"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-75dp"
            android:background="@drawable/hex__lightgrey"
            android:visibility="visible">

            <TextView
                android:id="@+id/complaints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="30dp"
                android:text="Complaints &amp;\nSuggestions"
                android:textColor="#000" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/login"
            android:layout_marginTop="-75dp"

            android:layout_marginRight="-40dp"
            android:background="@drawable/hex__lightgrey">

            <TextView
                android:id="@+id/myratings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="30dp"
                android:text="My Rating"
                android:textColor="#000" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/google"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/login"
            android:layout_centerHorizontal="true"
            android:background="@drawable/hex__lightgrey">

            <TextView
                android:id="@+id/assignmentHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="25dp"
                android:text="Assignment History"
                android:textColor="#000" />

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>